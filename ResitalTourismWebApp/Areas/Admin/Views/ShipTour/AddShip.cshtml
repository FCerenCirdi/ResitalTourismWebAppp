@model EntityLayer.Concrete.ShipTour
@{
    ViewData["Title"] = "AddShip";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yeni Gemi Turu Oluşturma Sayfası</h1>

<form method="post">
    <div class="form-group">
        @Html.Label("Tur Adı")
        <input type="text" asp-for="Name"  class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Bölge")
        <input type="text" asp-for="Region" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Kaç Gece")
        <input type="text" asp-for="DayNight" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Kapasite")
        <input type="text" asp-for="Capacity" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Fiyat")
        <input type="text" asp-for="Price" class=" form-control" />
    </div>

    <br />
    <button class="btn btn-outline-primary">Oluştur</button>
</form>




