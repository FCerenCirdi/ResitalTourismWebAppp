@using EntityLayer.Concrete
@model List<Tour>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<br />
<br />
<h1>Tur Rotaları</h1>
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Tur Adı</th>
        <th>Bölge</th>
        <th>Kapasite</th>
        <th>Fiyat</th>
        <th>Detay 1</th>
        <th>Detay 2</th>
        <th>Sitede Gör</th>
        <th>Sil</th>
        <th>Güncelle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.TourId</td>
            <td>@item.Name</td>
            <td>@item.Region</td>
            <td>@item.Capacity</td>
            <td>@item.Price₺</td>
            <td>@item.Details1</td>
            <td>@item.Details2</td>
            <td><a href="/Tour/Details/@item.TourId" class="btn btn-outline-info">Sitede Gör</a></td>
            <td><a href="/Admin/Tour/DeleteTour/@item.TourId" class="btn btn-outline-danger">Sil</a></td>
            <td><a href="/Admin/Tour/UpdateTour/@item.TourId" class="btn btn-outline-success">Güncelle</a></td>
        </tr>
    }
</table>
<a href="/Admin/Tour/AddTour/" class="btn btn-outline-primary">Yeni Tur Rotası</a>