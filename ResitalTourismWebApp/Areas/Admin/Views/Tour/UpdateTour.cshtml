@model EntityLayer.Concrete.Tour
@{
    ViewData["Title"] = "UpdateTour";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Tur Güncelleme Sayfası</h1>

<form method="post">
    <input type="hidden" asp-for="TourId"/>
    <div class="form-group">
        @Html.Label("Tur Adı")
        <input type="text" asp-for="Name" asp-items="Model.Hotels" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Tur Hakkında")
        <input type="text" asp-for="Description" class=" form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Kapasite")
        <input type="text" asp-for="Capacity" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Fiyat")
        <input type="text" asp-for="Price" class=" form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Bölge")
        <input type="text" asp-for="Region" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Rehber")
        <input type="text" asp-for="GuideId" class="form-control" />
    </div>
    <div class="form-group">
        @Html.Label("Tur Detayı")
        <textarea cols="30" rows="5" class="form-control" asp-for="Details1"></textarea>
    </div>
    <div class="form-group">
        @Html.Label("Tur Detayı Devam")
        <textarea cols="30" rows="5" class="form-control" asp-for="Details2"></textarea>
    </div>
    <br />
    <button class="btn btn-outline-primary">Güncelle</button>
</form>
